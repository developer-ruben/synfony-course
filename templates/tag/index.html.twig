{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
    <div class="alert alert-dismissible alert-success">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          {{ message }}

</div>


{% endfor %}

<div class="d-flex justify-content-between align-items-center mb-4">
<h1 class="m-0">Tags</h1>
<a href="{{ path('tag.create')}}" class="btn btn-primary">Create Tag</a>
</div>
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Count posts</th>
        <th>Action</th>
    </tr>
    {% for tag in tags %}
        <tr>
            <td>{{ tag.id }}</td>
            <td>{{ tag.name }}</td>
            <td>{{ tag.posts|length  }}</td>
            <td>
                <a class="btn btn-sm btn-warning" href="{{ path('tag.edit', {id:tag.id}) }}">Edit</a>
                <a class="btn btn-sm btn-danger" href="{{ path('tag.delete', {id:tag.id}) }}">Delete</a>
            </td>
        </tr>
    {% endfor %}
    {% if tags|length == 0 %}
        <tr>
            <td colspan="3">No tags...</td>
        </tr>
    {% endif %}
</table>
{% endblock %}
